<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.eCommerceV3.Views.CheckoutView"
             Title="Receipt">
        <VerticalStackLayout Padding="20" Spacing="10">
            <Label Text="Receipt" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />

            <Label x:Name="ItemListLabel" FontSize="16" />

            <Label x:Name="SubtotalLabel" FontSize="16" />
            <Label x:Name="TaxLabel" FontSize="16" />
            <Label x:Name="TotalLabel" FontSize="18" FontAttributes="Bold" />

            <Button Text="Go Back" Clicked="GoBackClicked" />
        </VerticalStackLayout>
</ContentPage>